<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wnd.dagger.MainActivity">

    <TextView
        android:id="@+id/tv_attackpower_desc_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attack Power : " />

    <TextView
        android:id="@+id/tv_attackpower_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_attackpower_desc_a" />


    <TextView
        android:id="@+id/tv_attackspeed_desc_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_attackpower_desc_a"
        android:text="Attack Speed : " />

    <TextView
        android:id="@+id/tv_attackspeed_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_attackspeed_desc_a"
        android:layout_toRightOf="@+id/tv_attackspeed_desc_a" />


    <TextView
        android:id="@+id/tv_attackpower_desc_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_attackspeed_desc_a"
        android:layout_marginTop="20dp"
        android:text="Attack Power : " />

    <TextView
        android:id="@+id/tv_attackpower_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_attackpower_desc_b"
        android:layout_alignTop="@+id/tv_attackpower_desc_b"/>

    <TextView
        android:id="@+id/tv_attackspeed_desc_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_attackpower_desc_b"
        android:text="Attack Speed : " />

    <TextView
        android:id="@+id/tv_attackspeed_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_attackspeed_desc_b"
        android:layout_toRightOf="@+id/tv_attackspeed_desc_b" />

    <TextView
        android:id="@+id/tv_attackpower_desc_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_attackspeed_desc_b"
        android:layout_marginTop="20dp"
        android:text="Attack Power : " />

    <TextView
        android:id="@+id/tv_attackpower_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_attackpower_desc_c"
        android:layout_alignTop="@+id/tv_attackpower_desc_c"/>

    <TextView
        android:id="@+id/tv_attackspeed_desc_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_attackpower_desc_c"
        android:text="Attack Speed : " />

    <TextView
        android:id="@+id/tv_attackspeed_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_attackspeed_desc_c"
        android:layout_toRightOf="@+id/tv_attackspeed_desc_c" />


    <Button
        android:id="@+id/goto_good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_attackspeed_desc_c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Go see badass"/>
</RelativeLayout>
